<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.lsh.data.Teacher" table="teacher" schema="" catalog="attendance">
        <id name="teacherId">
            <column name="teacher_id" sql-type="varchar" length="50" not-null="true"/>
        </id>
        <property name="teacherName">
            <column name="teacher_name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="teacherPassword">
            <column name="teacher_password" sql-type="varchar" length="64" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>